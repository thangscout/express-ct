extends ../layouts/comom.pug
block content
    h1 Users

    a(href="/users/create") New
    form(action="/users/search", method="GET" class="d-flex")
        input(type="text", name="q" class="form-control")
        button(class="btn btn-primary ml-3") Search
    ul(class="list-group")
        each user in users
            li(class="list-group-item")
                span= user.name
                span &nbsp;
                a(href='users/'+ user.id) View
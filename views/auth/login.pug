extends ../layouts/comom.pug
block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger=error

    form(action="/auth/login", method="POST")
        .form-group
            label(for="name") Email
            input#email.form-control.mb-3(name="email", type="text", value=values ? values.email: "")
        
        .form-group
            label(for="password") Password
            input#password.form-control(name="password" type="password", value=values? values.password: "")
        button.btn.btn-primary Create